# Azure OpenAI (RAG-enabled deployment pointing to CRA Guide)
AZURE_OPENAI_ENDPOINT=https://<your-aoai>.openai.azure.com
AZURE_OPENAI_KEY=<your-key>
AZURE_OPENAI_EXTRACT_DEPLOYMENT=<your-extract-deployment>
AZURE_OPENAI_MAP_DEPLOYMENT=<your-map-deployment>
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure AI Search (On Your Data configuration)
AZURE_SEARCH_ENDPOINT=https://my-search-prod.search.windows.net
AZURE_SEARCH_INDEX=cra-guide-2024
AZURE_SEARCH_KEY=<ADMIN-KEY-HERE>
AZURE_SEARCH_SEMANTIC_CONFIG=default
# Optional tuning parameters
# AZURE_SEARCH_CONTENT_FIELDS=content
# AZURE_SEARCH_TITLE_FIELD=title
# AZURE_SEARCH_URL_FIELD=source_url
# AZURE_SEARCH_TOP_N=5
# AZURE_SEARCH_STRICTNESS=3
# AZURE_SEARCH_ROLE_INFORMATION=Use the CRA T1 guide for 2024 Ontario to justify every mapping decision.
# AZURE_SEARCH_FILTER=

# Azure Storage (connection string mode)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=...;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER=tax-templates
AZURE_STORAGE_BLOB=T1-fillable-2024.pdf

# Optional: save outputs back to blob
SAVE_OUTPUT_TO_BLOB=false
AZURE_OUTPUT_CONTAINER=tax-outputs

AZURE_OPENAI_EXTENSIONS_API_VERSION=2024-02-15-preview
