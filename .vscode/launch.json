{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug backend",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/.venv/Scripts/uvicorn.exe",
      "args": [
        "main:app",
        "--reload",
        "--port",
        "8000"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "justMyCode": true
    }
  ]
}
